<Window x:Class="Fstore.ResetPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FStore - Reset Password" Height="245" Width="400"
        WindowStartupLocation="CenterScreen">
    <!-- Center the window on the screen -->

    <Grid Background="#F5F5F5">
        <!-- Light background -->
        <Label Content="New password" HorizontalAlignment="Left" Margin="11,26,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="123,31,0,0" VerticalAlignment="Top" Width="230"/>

        <Label Content="Re-enter password" HorizontalAlignment="Left" Margin="11,84,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="txtRePassword" HorizontalAlignment="Left" Margin="123,89,0,0" VerticalAlignment="Top" Width="230"/>

        <Button x:Name="btnLogin" Content="Ok" HorizontalAlignment="Left" Margin="81,146,0,0" VerticalAlignment="Top" Width="93" Height="39"/>
        <Button x:Name="btnCancel" Content="_Cancel" HorizontalAlignment="Left" Margin="217,146,0,0" VerticalAlignment="Top" Width="93" Height="39" Click="btnCancel_Click"/>
    </Grid>
</Window>
